{# src/BlogBundle/Resouces/views/Blog/show.html.twig #}
{% extends 'BlogBundle::layout.html.twig' %}

{% block title %}{{ blog.title }}{% endblock %}

{% block body %}
    <article class="blog">
        <header>
            <div class="date"><time datetime="{{ blog.createdtime|date('c') }}">{{ blog.createdtime|date('l, F j, Y') }}</time></div>
            <h2>{{ blog.title }}</h2>
        </header>
        
        <div>
            <p>{{ blog.content }}</p>
        </div>
    </article>
{% endblock %}
